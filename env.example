# =============================================================================
# Frontend (Next.js) - Environment Configuration  
# =============================================================================
# Environment variables for the ScholarAI Frontend application
# Copy this file to .env.local and fill in the actual values
# =============================================================================

# =============================================================================
# APPLICATION ENVIRONMENT
# =============================================================================
# Environment setting (dev, docker, prod)
NEXT_PUBLIC_ENV=dev

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Backend API endpoints for different environments

# Development API URL (local backend)
NEXT_PUBLIC_DEV_API_URL=http://localhost:8989

# Docker API URL (containerized backend)  
NEXT_PUBLIC_DOCKER_BACKEND_URL=http://localhost:8989

# Production API URL
NEXT_PUBLIC_API_BASE_URL=https://api.scholarai.com

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
# OAuth client IDs (these are public and safe to expose)

# Google OAuth2 Client ID
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_oauth_client_id.apps.googleusercontent.com

# GitHub OAuth2 Client ID
NEXT_PUBLIC_GITHUB_CLIENT_ID=your_github_oauth_client_id

# =============================================================================
# CLOUD SERVICES
# =============================================================================
# Cloudinary for image management and avatars

NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Toggle features on/off

NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_PDF_VIEWER=true
NEXT_PUBLIC_ENABLE_COLLABORATION=true

# =============================================================================
# UI CONFIGURATION
# =============================================================================
# Application branding and UI settings

NEXT_PUBLIC_APP_NAME=ScholarAI
NEXT_PUBLIC_APP_DESCRIPTION=AI-Powered Research Platform
NEXT_PUBLIC_COMPANY_NAME=ScholarAI Inc.

# =============================================================================
# ANALYTICS (Optional)
# =============================================================================
# Google Analytics tracking ID
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# Hotjar tracking code
NEXT_PUBLIC_HOTJAR_ID=1234567

# =============================================================================
# CDN AND ASSETS
# =============================================================================
# Content delivery network for static assets

NEXT_PUBLIC_CDN_BASE_URL=https://cdn.scholarai.com
NEXT_PUBLIC_ASSET_PREFIX=

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================
# Real-time communication settings

NEXT_PUBLIC_WS_URL=ws://localhost:8989/ws
NEXT_PUBLIC_WS_RECONNECT_INTERVAL=5000

# =============================================================================
# PDF AND DOCUMENT SETTINGS
# =============================================================================
# Document viewer configuration

NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=pdf,doc,docx,txt
NEXT_PUBLIC_PDF_WORKER_SRC=/pdfjs/pdf.worker.min.js

