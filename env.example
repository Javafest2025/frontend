# =============================================================================
# Frontend (Next.js) - Environment Configuration  
# =============================================================================
# Environment variables for the ScholarAI Frontend application
# Copy this file to .env.local and fill in the actual values
# =============================================================================

# =============================================================================
# APPLICATION ENVIRONMENT
# =============================================================================
# Environment setting (dev, docker, prod)
NEXT_PUBLIC_ENV=dev

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Backend API endpoints for different environments

# Development API URL (local backend)
NEXT_PUBLIC_DEV_API_URL=http://localhost:8989

# Docker API URL (containerized backend)  
NEXT_PUBLIC_DOCKER_BACKEND_URL=http://localhost:8989

# Production API URL
NEXT_PUBLIC_API_BASE_URL=https://api.scholarai.com

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
# OAuth client IDs (these are public and safe to expose)

# Google OAuth2 Client ID
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_oauth_client_id.apps.googleusercontent.com

# GitHub OAuth2 Client ID
NEXT_PUBLIC_GITHUB_CLIENT_ID=your_github_oauth_client_id

